<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ant.vkgeoclasstest.ProfileFragment"
    android:padding="00dp"
    android:id="@+id/fragmentProfile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="center_horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"

        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:id="@+id/ivProfile"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="top|center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text_default_material_light"
                    android:text="User Text"
                    android:id="@+id/tvProfileUser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="City Text"
                    android:id="@+id/tvProfileCity" />
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorSecondary" />

                <LinearLayout
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:paddingTop="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_text_default_material_light"
                            android:textStyle="bold"
                            android:text="12"
                            android:id="@+id/tvProfileUsers" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_users"
                             />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorSecondary" />


                    <LinearLayout
                        android:paddingTop="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_text_default_material_light"
                            android:textStyle="bold"
                            android:text="12"
                            android:id="@+id/tvProfileCities" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_cities"
                             />

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorSecondary" />


                    <LinearLayout
                        android:paddingTop="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_text_default_material_light"
                            android:textStyle="bold"
                            android:text="12"
                            android:id="@+id/tvProfileCountries" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/profile_countries"
                         />

                    </LinearLayout>


                </LinearLayout>



                </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Widget.AppCompat.ListView.Menu"
        android:id="@+id/lvUsers"
        android:layout_gravity="center_horizontal|top" />

</LinearLayout>

</FrameLayout>
